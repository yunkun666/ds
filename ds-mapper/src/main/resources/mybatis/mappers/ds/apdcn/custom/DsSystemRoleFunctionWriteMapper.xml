<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.com.mapper.apdcn.custom.DsSystemRoleFunctionWriteMapper" >
  <!--
   mbg mappers's namespace = cn.com.mapper.apdcn.mbg.MBGDsSystemRoleFunctionWriteMapper
  引用MBG里的元素,可以使用namespace.element的方式来调用.
  -->
    <resultMap id="BaseResultMap" type="cn.com.mapper.apdcn.pojo.DsSystemRoleFunction">
		<!-- WARNING - @mbggenerated -->
		<id column="id" property="id" jdbcType="VARCHAR" />
		<result column="rolefunctionid" property="rolefunctionid" jdbcType="VARCHAR" />
		<result column="functiontypeid" property="functiontypeid" jdbcType="VARCHAR" />
	</resultMap>
	
	<select id="getListVO" parameterType="cn.com.mapper.apdcn.model.DsSystemRoleFunctionModel" resultType="cn.com.mapper.apdcn.vo.DsSystemRoleFunctionVO">
		SELECT
			tb.*
		FROM
			qkl_system_role_function_type tb 
		WHERE 1 = 1 
			<if test="rolefunctionid !=null and rolefunctionid !='' ">
				AND tb.rolefunctionid = #{rolefunctionid,jdbcType=VARCHAR}
			</if>
			<if test="functiontypeid !=null and functiontypeid !='' ">
				AND tb.functiontypeid = #{functiontypeid,jdbcType=VARCHAR}
			</if>
	</select>
	
	<select id="getListCount" parameterType="cn.com.mapper.apdcn.pojo.DsSystemRoleFunction" resultType="int">
		SELECT
			count(1)
		FROM
			qkl_system_role_function_type tb
		WHERE 1 = 1 
			<if test="rolefunctionid !=null and rolefunctionid !='' ">
				AND tb.rolefunctionid = #{rolefunctionid,jdbcType=VARCHAR}
			</if>
			<if test="functiontypeid !=null and functiontypeid !='' ">
				AND tb.functiontypeid = #{functiontypeid,jdbcType=VARCHAR}
			</if>
	</select>
	
	<delete id="deleteByRolefunctionid" parameterType="java.lang.String">
	    delete from qkl_system_role_function_type where rolefunctionid = '${rolefunctionid}'
	 </delete>
</mapper>